<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragmentHome"
    android:layout_height="match_parent"
    tools:context=".FragmentNav.HomeFragmnet">

    <!-- TODO: Update blank fragment layout -->


        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/_50sdp"

                android:gravity="center_vertical"
                android:paddingRight="@dimen/_90sdp">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/_70sdp"
                    app:civ_border_width="2dp"
                    android:id="@+id/ImageAvatar"


                    android:layout_height="@dimen/_70sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:src="@drawable/avatar"

                   app:civ_border_color="@color/black"
                    app:civ_circle_background_color="@color/white" />

                <LinearLayout
                    android:layout_width="@dimen/_175sdp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hi"
                            android:textColor="@color/orange"
                            android:textSize="@dimen/_20sdp"
                            android:textStyle="normal" />

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/icon_hi" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="@dimen/_135sdp"
                        android:layout_height="wrap_content"
                        android:text="JASON TODD "
                        android:textSize="@dimen/_12sdp"
                        android:id="@+id/tvName"

                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"

                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:src="@drawable/human" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="position"
                            android:id="@+id/tvPos"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="italic" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"


                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_120sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="center"




                    android:orientation="horizontal"
                    android:weightSum="1">


                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_100sdp"
                        app:cardElevation="@dimen/_4sdp"

                        android:layout_marginRight="@dimen/_10sdp"

                        android:outlineSpotShadowColor="@color/black"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/_12sdp" >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Quản Lý Phòng"
                            android:textSize="@dimen/_10sdp"
                            android:layout_gravity="center_horizontal"


                            android:textStyle="bold"/>
                        <ImageView
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_margin="@dimen/_25sdp"
                            android:layout_gravity="center"
                            android:src="@drawable/manage_room"/>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_100sdp"
                        app:cardElevation="@dimen/_4sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:outlineSpotShadowColor="@color/black"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/_12sdp" >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Quản Lý Hợp Đồng"
                            android:layout_gravity="center_horizontal"
                            android:textSize="@dimen/_10sdp"

                            android:textStyle="bold"/>
                        <ImageView
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_margin="@dimen/_25sdp"
                            android:layout_gravity="center"
                            android:src="@drawable/contract"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_120sdp"
                    android:gravity="center"

                    android:layout_marginTop="@dimen/_5sdp"


                    android:orientation="horizontal"
                    android:weightSum="1">


                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_100sdp"
                        app:cardElevation="@dimen/_4sdp"
                        android:layout_marginRight="@dimen/_10sdp"

                        android:outlineSpotShadowColor="@color/black"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/_12sdp" >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_1sdp"
                            android:text="Hợp Đồng đang hiệu lực"
                            android:textSize="@dimen/_10sdp"
                            android:layout_gravity="center_horizontal"


                            android:textStyle="bold"/>
                        <ImageView
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_margin="@dimen/_25sdp"
                            android:layout_gravity="center"
                            android:src="@drawable/time_management"/>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_100sdp"
                        app:cardElevation="@dimen/_4sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:outlineSpotShadowColor="@color/black"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/_12sdp" >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thống Kê Doanh Thu"
                            android:layout_margin="@dimen/_2sdp"
                            android:layout_gravity="center_horizontal"

                            android:textSize="@dimen/_10sdp"
                            android:textStyle="bold"/>
                        <ImageView
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_margin="@dimen/_25sdp"
                            android:layout_gravity="center"
                            android:src="@drawable/bar_chart"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_120sdp"
                    android:gravity="center"


                    android:layout_marginTop="@dimen/_5sdp"

                    android:orientation="horizontal"
                    android:weightSum="1">


                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_100sdp"
                        app:cardElevation="@dimen/_4sdp"
                        android:layout_marginRight="@dimen/_10sdp"

                        android:outlineSpotShadowColor="@color/black"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/_12sdp" >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Quản Lý Dịch Vụ"
                            android:layout_gravity="center_horizontal"

                            android:textSize="@dimen/_10sdp"
                            android:textStyle="bold"/>
                        <ImageView
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_margin="@dimen/_25sdp"
                            android:layout_gravity="center"
                            android:src="@drawable/food_delivery"/>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_100sdp"
                        app:cardElevation="@dimen/_4sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:outlineSpotShadowColor="@color/black"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/_12sdp" >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thêm Tài Khoản"
                            android:layout_gravity="center_horizontal"

                            android:textSize="@dimen/_10sdp"
                            android:textStyle="bold"/>
                        <ImageView
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_margin="@dimen/_25sdp"
                            android:layout_gravity="center"
                            android:src="@drawable/little_user"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>



</FrameLayout>